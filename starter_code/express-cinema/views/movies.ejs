<!DOCTYPE html>
<html>
  <head>
    <title>Movies</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav>
      <h1>IronHack Movies</h1>
      <h2>Click on the movie to check the showtimes</h2>
      <button><a href="/">Go Back Home</a></button>
    </nav>
    <div class="movies-container">

      <% movies.forEach(movie => { %>
        <div class="each-movie"> 
          <img src="<%=  movie.image %>">
          <div class="each-movie-title"><%= movie.title %></div>
          <a href="movie/<%= movie._id %>">See more</a>
        </div>
      <%}) %>
    </div>
    
    </div>
  </body>
</html>
